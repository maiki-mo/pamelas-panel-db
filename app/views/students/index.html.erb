<p id="notice"><%= notice %></p>

<h1>Students</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Cohorts</th>
      <th>Edit</th>
      <th colspan="3"></th>
    </tr>
  </thead>

<%= will_paginate @students_list %>
  <tbody>
    <% @students_list.each do |student| %>
      <tr>
        <td>Name: <%= "#{student.first_name} #{student.last_name}" %></td>
        <td><% student.cohorts.each do | cohort | %>| 
          <%= link_to "#{cohort.name}", edit_cohort_path(cohort.id) %> |
          <% end %>
        </td>
        <td><%= link_to 'Show', student %></td>
        <td><%= link_to 'Edit', edit_student_path(student) %></td>
        <td><%= link_to 'Destroy', student, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= will_paginate @students_list %>

<br>

<%= link_to 'New Student', new_student_path %>
