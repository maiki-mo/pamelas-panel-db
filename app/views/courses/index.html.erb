<p id="notice"><%= notice %></p>

<h1>Courses</h1>

  <%= will_paginate @courses_list %>


<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Hours</th>
      <th>Cohorts</th>
      <th>Edit Courses</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @courses_list.each do |course| %>
      <tr>
        <td><%= course.name %></td>
        <td><%= course.hours %></td>
        <td><% course.cohorts.each do |cohort| %>| 
          <%= link_to "#{cohort.name}", edit_cohort_path(cohort.id) %> |
          <% end %>
        </td>
        <td><%= link_to 'Show', course %></td>
        <td><%= link_to 'Edit', edit_course_path(course) %></td>
        <td><%= link_to 'Destroy', course, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <td><%= link_to 'Create New Cohort Instance', new_cohort_path %></td>
      </tr>
    <% end %>
  </tbody>
</table>

  <%= will_paginate @courses_list %>


<br>
<%= link_to 'New Course', new_course_path %>
