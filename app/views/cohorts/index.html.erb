<p id="notice"><%= notice %></p>

<h1>Cohorts</h1>

  <%= will_paginate @cohorts_list %>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Course</th>
      <th>Start</th>
      <th>End</th>
      <th>Edit</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @cohorts_list.each do |cohort| %>
      <tr>
        <td><%= cohort.name %></td>
        <td><%= cohort.course.name %></td>
        <td><%= cohort.start %></td>
        <td><%= cohort.end %></td>
        <td><%= link_to 'Show', cohort %></td>
        <td><%= link_to 'Edit', edit_cohort_path(cohort) %></td>
        <td><%= link_to 'Destroy', cohort, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= will_paginate @cohorts_list %>

<br>

<%= link_to 'New Cohort', new_cohort_path %>
